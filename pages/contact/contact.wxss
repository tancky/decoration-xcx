/* pages/contact/contact.wxss */
page {
  height: 100%;
}

.chat-area {
  width: 100%;
  height: 94%;
  background-color: #eee;
}
.chat-area .c-chat{
  display: flex;
  justify-content: flex-end;
  margin-bottom: 30rpx;
}
.chat-area .c-chat:first-child {
  margin-top: 30rpx;
}
.chat-area .c-chat text {
  margin: 0 30rpx;
  padding: 20rpx 30rpx;
  background-color: #3a8bde;
  color: #fff;
  border-radius: 14rpx;
}
.chat-area .b-chat {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 30rpx;
}
.chat-area .b-chat text {
  padding: 10rpx 30rpx;
  background-color: #fff;
  color: #000;
  border-radius: 14rpx;
  margin: 0 30rpx;
}
.chat-menu {
  width: 100%;
  height: 6%;
  display: flex;
}

.chat-menu .chat {
  width: 80%;
  height: 100%;
  display: flex;
  align-items: center;
}

.chat-menu .chat input {
  width: 100%;
  height: 100%;
  padding-left: 30rpx;
}

.chat-menu .chat-send {
  width: 20%;
}
.chat-menu .chat-send button {
	background-color: #3a8bde;
	height: 100%;
 	color: #fff;
}
